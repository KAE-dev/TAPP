<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity2"
    android:background="@drawable/fontwo">


    <ImageButton
        android:id="@+id/vector_back"
        android:layout_width="29dp"
        android:layout_height="23dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/arrow" />

    <EditText
        android:id="@+id/emaletext"
        android:layout_width="276dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginBottom="280dp"
        android:background="@drawable/ectangle"
        android:ems="10"
        android:hint="e-maile"
        android:inputType="textEmailAddress"
        android:paddingLeft="30dp"
        android:paddingBottom="8dp"
        android:textColorHint="#36000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="276dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginBottom="201dp"
        android:background="@drawable/ectangle"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:paddingLeft="30dp"
        android:paddingBottom="8dp"
        android:textColorHint="#36000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/name"

        android:layout_width="276dp"
        android:layout_height="55dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="357dp"
        android:background="@drawable/ectangle"
        android:ems="10"
        android:hint="name"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingLeft="30dp"
        android:paddingBottom="8dp"
        android:textColorHint="#36000000"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/ButtonSI"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/emaletext"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginBottom="-168dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/buttonsin" />


</RelativeLayout>